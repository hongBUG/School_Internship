package cn.tentact.nebula.db.dao

import org.apache.ibatis.annotations.Mapper
import java.util.Map

/**
 * user表Dao接口
 */
@Mapper
interface I_UserDao {
	/**
	 * 获取登陆信息
	 * @param map 参数
	 * @return 结果集
	 */
	def Map searchUsernamePassword(Map map);

	/**
	 * 查询用户信息
	 * @param username 用户名
	 * @return 结果集
	 */
	def Map searchInfo(String username);

	/**
	 * 添加用户记录
	 * @param map 用户信息
	 * @return 执行记录数
	 */
	def int add(Map map);

	/**
	 * 查询用户密码
	 * @param map 参数
	 * @return 密码
	 */
	def String searchPassword(Map map);

	/**
	 * 更新用户登陆时间
	 * @param username 用户名
	 * @return 执行记录数
	 */
	def int updateLoginTime(String username);
}
